{
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "module": "commonjs",
    "jsx": "react",
    "target": "ES5",
    "composite": true,
    "pretty": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "paths": {
      "@/*": ["*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "scripts",
    "docs",
    "versioned_docs",
    "versioned_sidebars",
    "src/pages",
    "src/css",
    "src/theme"
  ],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
